// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id
  nickname String
  classes  Class[]
  gems     Gems?
  cents    Cents?
}

model Class {
  id         String      @id
  userId     String
  name       String
  classTimes ClassTime[]
  location   Location?
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], name: "class_user_id_idx")
}

model Location {
  id      String @id
  name    String @default("")
  class   Class  @relation(fields: [classId], references: [id])
  classId String @unique
  lat     String
  lng     String

  @@index([classId], name: "location_class_idx")
}

model ClassTime {
  id                   String @id
  classId              String
  startTime            String
  dayOfWeek            Int
  lastClaimedTimeStamp BigInt

  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([classId], name: "time_class_idx")
}

model Gems {
  id     String @id
  userId String @unique
  amount Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], name: "gems_user_id_idx")
}

model Cents {
  id     String @id
  userId String @unique
  amount Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], name: "cents_user_id_idx")
}
